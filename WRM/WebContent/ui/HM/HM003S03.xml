    				<w2:column blockSelect="false" id="column25" inputType="text" style="height:44px;" value="참여시작기간" width="120" class="req"></w2:column>
    				<w2:column blockSelect="false" id="column23" inputType="text" style="height:44px;" value="참여종료기간" width="120" class="req"></w2:column>
    				<w2:column blockSelect="false" id="column21" inputType="text" style="height:44px;" value="담당업무" width="107"></w2:column>
    				<w2:column blockSelect="false" id="column19" inputType="text" style="height:44px;" value="발주처" width="102"></w2:column>
